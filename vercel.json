{
    "version": 2,
    "builds": [
      {
        "src": "app.js",  
        "use": "@now/node" 
      }
    ],
    "routes": [
      {
        "src": "/search", 
        "dest": "/app.js" 
      },
      {
        "src": "/(.*)", 
        "dest": "/app.js"
      }
    ],
    "headers": [
        {
        "src": "/(.*)", 
          "headers": [
            {
              "key": "Cache-Control",
              "value": "s-maxage=1, stale-while-revalidate=59"
            }
          ]
        }
      ]
  }